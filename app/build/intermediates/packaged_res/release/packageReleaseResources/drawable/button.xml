<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
		<shape>
			<gradient 
				android:startColor="#FDFDFD" 
				android:endColor="#F5F5F5" 
				android:angle="270" />
			
			<stroke 
				android:width="4dp" 
				android:color="#FBFBFB" />
			<corners 
				android:radius="50dp" />
			
		</shape>
	</item>
	<item android:state_pressed="false" >
		<shape>
			<gradient 
				android:startColor="#575757" 
				android:endColor="#030303" 
				android:angle="270" />
			<stroke 
				android:width="4dp"
				android:color="#E74A40" />
			<corners 
				android:radius="40dp" />
		</shape>
	</item>
</selector>
